extends base.pug

block content
  ul(class='nav nav-pills')
    li
      a(href='/users/logout') Logout
    li
      a(href='./file-upload') Upload/List
    li(class='active')
      a(href='./file-search') Search

  div(class='container-fluid')
    h2 File Search
    form(action='/files/file-search', method='POST')
      div(class='form-group')
        label(for='search') Enter search text:
        textarea(class='form-control' name='search', id="search")
      button(type='submit', class='btn btn-default') Search
